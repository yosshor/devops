pipeline {
	agent {
            label 'PLUTO'
     
        }
	tools {
	    maven "MAVEN3.9"
	    jdk "JDK17"
	}

	stages {
	    stage('Fetch code') {
            steps {
               git branch: 'main', url: 'https://github.com/yosshor/test.git'
            }

	    }


       stage('UNIT TEST') {
            steps{
                sh 'mvn test'
            }
        }


	    stage('Build'){
	        steps{
	           sh 'mvn install -DskipTests'
	        }

	        post {
	           success {
	              echo 'Now Archiving it...'
	              archiveArtifacts artifacts: '**/target/*.war'
	           }
	        }
	    }

	    
	}
}